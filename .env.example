# TORQUE 360 â€” Environment Configuration
# Copy to .env and fill in production values
# ============================================

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=torque
DATABASE_PASSWORD=
DATABASE_NAME=torque360
DATABASE_URL=postgresql://torque:PASSWORD@localhost:5432/torque360

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://:PASSWORD@localhost:6379

# Auth
JWT_SECRET=
JWT_REFRESH_SECRET=
CUSTOMER_PORTAL_JWT_SECRET=
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Meilisearch
MEILI_HOST=http://localhost:7700
MEILI_MASTER_KEY=

# Cloudflare R2 (Storage)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=torque360-files
R2_PUBLIC_URL=

# SII Chile (Facturacion Electronica)
SII_ENVIRONMENT=sandbox
SII_RUT_EMPRESA=
SII_CERT_PATH=
SII_CERT_PASSWORD=

# Email (ProtonMail Bridge)
SMTP_HOST=127.0.0.1
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=

# App
APP_URL=https://torque360.cl
API_URL=https://api.torque360.cl
CORS_ORIGIN=https://torque360.cl
NODE_ENV=production
PORT=3001
API_PORT=3001
WEB_PORT=3000

# Backup
BACKUP_LOCAL_PATH=/data/backups
BACKUP_RETENTION_DAYS=90
AUTO_SCALE_ENABLED=true
